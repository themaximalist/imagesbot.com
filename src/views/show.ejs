<%- include('partials/_header') %>
<div class="min-h-screen flex flex-col p-8 gap-4 lg:gap-8 justify-center items-center relative">

    <div class="flex gap-2 items-center absolute top-4">
        <%- include('partials/_logo_header', { title: `${search.Queries[0].query.split(' ').map(word => word.charAt(0).toUpperCase() + word.slice(1).toLowerCase()).join(' ')} Stock Images`, small: true }) %>
    </div>
    <div class="max-w-5xl mx-auto flex flex-col gap-8 items-center mt-8">
        <h1 class="text-2xl md:text-3xl lg:text-4xl xl:text-5xl flex"><%- search.Queries[0].query %></h1>
        <%
        let klass;
        if (favorites.length % 7 == 0) {
            klass = "grid-cols-2 md:grid-cols-4 lg:grid-cols-5 xl:grid-cols-6 2xl:grid-cols-7";
        } else if (favorites.length % 6 == 0) {
            klass = "grid-cols-2 md:grid-cols-4 lg:grid-cols-5 xl:grid-cols-6";
        } else if (favorites.length % 5 == 0) {
            klass = "grid-cols-2 md:grid-cols-4 lg:grid-cols-5";
        } else if (favorites.length % 4  == 0) {
            klass = "grid-cols-2 md:grid-cols-4";
        } else if (favorites.length % 3 == 0 ) {
            klass = "grid-cols-2 md:grid-cols-3";
        } else if (favorites.length % 2 == 0) {
            klass = "grid-cols-2";
        } else {
            if (favorites.length > 7) {
            klass = "grid-cols-2 md:grid-cols-4 lg:grid-cols-5 xl:grid-cols-6 2xl:grid-cols-7";
            } else {
            klass = "grid-cols-1";
            }
        }
        %>
        <div id="favorites" class="grid gap-4 <%- klass %>">
            <% favorites.forEach(function(result) { %>
            <a href="<%- result.image_url %>" download target="_blank" class="w-full aspect-square bg-gray-50 flex justify-center items-center text-gray-600 hover:scale-110 transition-all cursor-pointer">
                <img src="<%- result.thumbnail_url %>" class="w-full h-full" />
            </a>
            <% }) %>
        </div>
    </div>
</div>
<%- include('partials/_footer') %>