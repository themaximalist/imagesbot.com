<% const title = `${result.Concept.Query.query.split(' ').map(word => word.charAt(0).toUpperCase() + word.slice(1).toLowerCase()).join(' ')}` %>
<% const description = `Image search results for '${result.Concept.Query.query}'` %>
<%- include('partials/_header', { title, description }) %>

<div class="flex flex-col items-center my-4">
    <%- include("partials/_logo_header", { title, small: true }) %>
    <a href="/gallery" class="text-gray-500 hover:text-gray-700 transition-colors mt-2">
        ‚Üê Back to gallery
    </a>
</div>

<div class="container mx-auto px-4 py-8">
    <div class="flex flex-col md:flex-row gap-8 max-w-6xl mx-auto">
        <div class="md:w-7/12">
            <img src="<%= result.image_url %>" alt="<%= result.Concept.prompt %>" class="w-full rounded-lg shadow-lg" />
        </div>
        
        <div class="md:w-5/12 flex flex-col gap-6">
            <div class="bg-gray-50 rounded-lg p-6 shadow-sm">
                <h2 class="text-xl font-medium text-gray-900 mb-4"><%= title %> Stock Image</h2>
                <p class="text-gray-700 leading-relaxed">
                    <%= result.Concept.prompt %>
                </p>
                
                <div class="flex gap-2"></div>
                    <a href="<%= result.image_url %>" download class="inline-flex items-center gap-2 px-4 py-2 bg-gray-100 hover:bg-gray-200 text-gray-800 rounded-lg mt-6 transition-colors">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                            <path fill-rule="evenodd" d="M3 17a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm3.293-7.707a1 1 0 011.414 0L9 10.586V3a1 1 0 112 0v7.586l1.293-1.293a1 1 0 111.414 1.414l-3 3a1 1 0 01-1.414 0l-3-3a1 1 0 010-1.414z" clip-rule="evenodd" />
                        </svg>
                        Download
                    </a>
                    <a href="/results/<%= result.Concept.Query.id %>" class="inline-flex items-center gap-2 px-4 py-2 bg-gray-100 hover:bg-gray-200 text-gray-800 rounded-lg mt-6 transition-colors">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                            <path fill-rule="evenodd" d="M4 2a1 1 0 011 1v2.101a7.002 7.002 0 0111.601 2.566 1 1 0 11-1.885.666A5.002 5.002 0 005.999 7H9a1 1 0 010 2H4a1 1 0 01-1-1V3a1 1 0 011-1zm.008 9.057a1 1 0 011.276.61A5.002 5.002 0 0014.001 13H11a1 1 0 110-2h5a1 1 0 011 1v5a1 1 0 11-2 0v-2.101a7.002 7.002 0 01-11.601-2.566 1 1 0 01.61-1.276z" clip-rule="evenodd" />
                        </svg>
                        Remix
                    </a>
                </div>
            </div>

        </div>
    </div>
</div>

<div class="flex flex-col w-full mx-auto px-4 py-8">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 2xl:grid-cols-5 gap-2">
        <% for (const r of related) { %>
        <% if (r.id === result.id) continue; %>
        <a href="/result/<%= r.id %>">
            <img src="<%= r.image_url %>" alt="<%= result.Concept.prompt %>" class="w-full" />
        </a>
        <% } %>
    </div>
</div>


<%- include("partials/_footer") %>